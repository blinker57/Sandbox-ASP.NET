@model IEnumerable<Sandbox_ASP.NET.Models.TVShow>
@{
  ViewBag.Title = "Home Page";
}

<div class="jumbotron">
  <h1 id="main-title">
    sand·box /ˈsan(d)ˌbäks/
  </h1>
  <ol id="byline">
    <li>a shallow box or hollow in the ground partly filled with sand for children to play in.</li>
    <li>a virtual space in which new or untested software can be run securely.</li>
  </ol>
</div>

<ul class="tvshows">
  @foreach (var TVShow in Model)
  {
  <li>
    <div class="date">
      <div class="month">
        @TVShow.DateTime.ToString("MMM")
      </div>
      <div class="day">
        @TVShow.DateTime.ToString("d ")
      </div>
    </div>
    <div class="details">
      <span class="tvwatcher">
        @TVShow.TVWatcher.Name
      </span>
      <span class="genre">
        @TVShow.Genre.Name
      </span>
      <button data-tvshow-id="@TVShow.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Watching?</button>
    </div>
  </li>
  }
</ul>

<div class="row">
  <div class="col-md-4">
    <h2>Getting started</h2>
    <p>
      ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
      enables a clean separation of concerns and gives you full control over markup
      for enjoyable, agile development.
    </p>
    <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
  </div>
  <div class="col-md-4">
    <h2>Get more libraries</h2>
    <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
    <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
  </div>
  <div class="col-md-4">
    <h2>Web Hosting</h2>
    <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
    <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
  </div>
</div>
@section scripts
{
  <script>
    $(document).ready(function () {
      $(".js-toggle-attendance").click(function (e) {
        var button = $(e.target);
        $.post("/api/attendances", { tvshowId: button.attr("data-tvshow-id") })
          .done(function () {
            button
              .removeClass("btn-default")
              .addClass("btn-info")
              .text("Watching");
          })
          .fail(function () {
            alert("Something failed!");
          })
      })
    })
   </script>}